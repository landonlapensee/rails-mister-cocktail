<h1>Show</h1>
<p><%= @cocktail.name %></p>



<p>Doses</p>
<ul>
<% @cocktail.doses.each do |dose| %> 
<li>
<%= dose.description %>
<%= dose.ingredient.name %>
<%= link_to "Delete",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?"} %>
</li>
<% end %>
</ul>



<%= link_to "Add Doses", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to Cocktail List", cocktails_path %>